<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs408.alertaide.Trig_Ques_Activity">

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="355.2dp"
        android:id="@+id/quesView"
        android:text="Patient restless or semiconscious?"
        android:textAllCaps="true"
        android:gravity="center"
        android:scaleY="1" />
    <Button
        android:text="Yes"
        android:layout_width="190.8dp"
        android:layout_height="wrap_content"
        android:id="@+id/yes"
        android:layout_marginRight="0.0dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:layout_below="@+id/quesView" />
    <Button
        android:text="No"
        android:layout_width="192.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/no"
        android:layout_weight="0"
        android:layout_marginRight="0.0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/quesView"
        android:layout_toRightOf="@+id/yes"/>

</RelativeLayout>
