<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs408.alertaide.Login_Activity">

    <TextView
        android:text="SiGN uP"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/SignUpView"
        android:layout_width="242.0dp"
        android:layout_height="71.8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="53.8dp"
        android:layout_marginBottom="69.2dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="57.3dp"
        android:id="@+id/editName"
        android:background="#7f444444"
        android:layout_marginBottom="15dp"
        android:text="Name: "
        android:layout_below="@+id/SignUpView"/>
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="57.3dp"
        android:id="@+id/editNumber"
        android:background="#7f444444"
        android:layout_marginBottom="15dp"
        android:text="Number: "
        android:layout_below="@+id/editName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="57.3dp"
        android:id="@+id/editCountry"
        android:background="#7f444444"
        android:text="Country: "
        android:layout_below="@+id/editNumber"/>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="57.3dp"
    android:text="SiGN uP"
    android:layout_below="@+id/editCountry"
    android:id="@+id/signUpButton"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="57.3dp"
        android:text="TestBackend"
        android:id="@+id/testViewButton" />

</RelativeLayout>
