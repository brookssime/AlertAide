<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="cs408.alertaide.Login_Activity" android:background="@android:color/background_dark"
                android:id="@+id/myLayout">

    <TextView
            android:text="Welcome to Alert Aide!"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:id="@+id/SignUpView"
            android:layout_width="242.0dp"
            android:layout_height="71.8dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_light" android:typeface="normal"
    />
    <EditText

            android:layout_width="match_parent"
            android:layout_height="57.3dp"
            android:id="@+id/editName"
            android:background="@drawable/rounded"
            android:hint="Name" android:textColorHint="#9a9a9a" android:textColor="@android:color/black"
            android:layout_below="@+id/SignUpView" android:layout_centerHorizontal="true"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="57.3dp"
            android:id="@+id/editHospital"
            android:background="@drawable/rounded"
            android:hint="Hospital" android:textColorHint="#9a9a9a" android:textColor="@android:color/black"
            android:layout_below="@+id/editLocation" android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57.3dp"
        android:id="@+id/editLocation"
        android:background="@drawable/rounded"
        android:hint="City/Town" android:textColorHint="#9a9a9a" android:textColor="@android:color/black"
        android:layout_below="@+id/editName" android:layout_alignParentStart="true"/>

    <ImageButton
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:text="Sign Up"
            android:id="@+id/signUpButton"
            android:background="@drawable/sign_up"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_below="@+id/editHospital" android:layout_centerHorizontal="true" android:maxHeight="100dp"
            android:maxWidth="100dp"/>
  <ImageView
          android:layout_width="140dp"
          android:layout_height="140dp"
          android:id="@+id/imageView"
          android:src="@drawable/alert_aide_2"
          android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>


</RelativeLayout>
