<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs408.alertaide.Checkout_Activity">

    <TextView
        android:text="CHECK OUT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1"
        android:layout_width="242.0dp"
        android:layout_height="71.8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="53.8dp"
        android:layout_marginBottom="0dp"
        android:textSize="32dp" />
    <CheckBox
        android:text="Successful Contact with Clinical Expert"
        android:layout_width="match_parent"
        android:layout_height="81.9dp"
        android:id="@+id/checkBox1"
        android:textSize="24dp"
        android:layout_margin="50dp"
        android:layout_below="@+id/textView1"/>
    <CheckBox
        android:text="Successful Treatment of Patient"
        android:layout_width="match_parent"
        android:layout_height="81.9dp"
        android:id="@+id/checkBox2"
        android:textSize="24dp"
        android:layout_margin="50dp"
        android:layout_below="@+id/checkBox1"/>

</RelativeLayout>
