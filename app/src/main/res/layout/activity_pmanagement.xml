<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs408.alertaide.PManagement_Activity">

    <TextView
        android:text="PATIENT MANAGEMENT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1"
        android:layout_width="242.0dp"
        android:layout_height="71.8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="53.8dp"
        android:layout_marginBottom="20dp"
        android:textSize="32dp" />
    <TextView
        android:text="START 2 IVs"
        android:layout_width="match_parent"
        android:layout_height="70.2dp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="0.0dp"
        android:textSize="24dp"
        android:layout_below="@+id/textView1"/>
    <ImageView
        android:src="@drawable/tempimage"
        android:layout_width="250.8dp"
        android:layout_height="154.2dp"
        android:id="@+id/imageView1"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView2"/>
    <Button
        android:text="Done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button2"/>
    <Button
        android:text="Send SMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_below="@+id/imageView1"/>
    <Button
        android:text="Send 2nd SMS to New CE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/button1"/>

</RelativeLayout>
